<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama barang"
                android:id="@+id/namabarang"
                android:padding="10dp"/>

            <TextView
                android:textSize="11sp"
                android:layout_marginLeft="10dp"
                android:textColor="#DF0A0A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama barang harus sesuai di daftar barang" />

        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Jumlah barang"
                android:id="@+id/jumlahbarang"
                android:padding="10dp"
                android:layout_weight="1"/>

            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PCS"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Harga barang"
                    android:id="@+id/hargabarang"
                    android:padding="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#21AC02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga diperbolehkan berbeda dengan di daftar barang" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
